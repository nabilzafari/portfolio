<!DOCTYPE html>
<html class="no-js">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="{{ theme_url }}/../shared/img/favicon.ico">
    <title>{% if meta.title %}{{ meta.title }} | {% endif %}{{ site_title }}</title>

    {% if meta.description %}
        <meta name="description" content="{{ meta.description|striptags }}" />
    {% endif %}
    {% if meta.robots %}
        <meta name="robots" content="{{ meta.robots }}" />
    {% endif %}

    {% if current_page %}
        <link rel="canonical" href="{{ current_page.url }}" />
    {% endif %}

    {% if config.session.theme == "dark" %}
        <link rel="stylesheet" href="{{ theme_url }}/css/style-dark.css" type="text/css" />
    {% else %}
        <link rel="stylesheet" href="{{ theme_url }}/css/style.css" type="text/css" />
    {% endif %}

</head>
<!-- "Widescreen-mode" can be activated in portfolio/config/config.yml -->
<body{% if config.theme_config.widescreen %} class="widescreen"{% endif %}>
    <div class="header" role="banner">
        <div class="container">
            <a class="nav-toggle" id="nav-toggle" title="Toggle Menu" role="button" aria-controls="nav" aria-expanded="false" tabindex="1">
                <i class="fa fa-bars" aria-hidden="true" id="toggler"></i>
                <span class="sr-only">Toggle Menu</span>
            </a>
            {% if pages["_meta"].meta.logo %}
                <div class="logo" aria-hidden="true">
                    <a href="{{ "index"|link }}">
                        <img src="{{ base_url }}/{{ pages["_meta"].meta.logo|url }}" alt="" />
                    </a>
                </div>


            {% endif %}
            <div class="title" {{ pages["_meta"].meta.tagline ? ' class="tagline"' }}>
                <a href="{{ "index"|link }}">
                    <h1>{{ site_title }}</h1>
                    {{ pages["_meta"].meta.tagline|markdown }}
                </a>
            </div>
            <div class="nav">
                <div id="nav" role="navigation" tabindex="-1">
                    <ul>
                        {% for page in pages(depthOffset=-1) if page.title and not page.hidden %}
                            <li{% if page.id == current_page.id %} class="active"{% endif %}>
                                <a href="{{ page.url }}">{{ page.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
                <!--      <img class="flash-img" src="{{ base_url }}/image/sunset.jpg?sc=banner1&a=40,0,0,0"> -->

    <div class="main" role="main">
        <div class="landingpage">
            {{ content }}
        </div>
    </div>
                

    <div class="footer">
        <div class="container">
            <div class="social">
                <!-- Loads from FontAwesome (themes/shared/css/font-awesome.min.css) -->
                {% for social in pages["_meta"].meta.social %}
                    <a href="{{ social.url }}" title="{{ social.title }}" role="button">
                        <i class="{{ social.icon }}" aria-hidden="true"></i>
                        <span class="sr-only">{{ social.title }}</span>
                    </a>
                {% endfor %}
            </div>
            <div class="instagram">
                {% for instagram in pages["_meta"].meta.instagram %}
                    <a href="{{ instagram.url }}" title="{{ instagram.title }}" role="button">
                        <i class="{{ instagram.icon }}" aria-hidden="true"></i>
                        <span class="sr-only">{{ instagram.title }}</span>
                    </a>
                    {% endfor %}
            </div>
            <div class="facebook">
                {% for facebook in pages["_meta"].meta.facebook %}
                    <a href="{{ facebook.url }}" title="{{ facebook.title }}" role="button">
                        <i class="{{ facebook.icon }}" aria-hidden="true"></i>
                        <span class="sr-only">{{ facebook.title }}</span>
                </a>
                {% endfor %}
            </div>
            <div class="twitter">
                {% for twitter in pages["_meta"].meta.twitter %}
                    <a href="{{ twitter.url }}" title="{{ twitter.title }}" role="button">
                        <i class="{{ twitter.icon }}" aria-hidden="true"></i>
                        <span class="sr-only">{{ twitter.title }}</span>
                </a>
                {% endfor %}
            </div>
            <div class="youtube">
                {% for youtube in pages["_meta"].meta.youtube %}
                    <a href="{{ youtube.url }}" title="{{ youtube.title }}" role="button">
                        <i class="{{ youtube.icon }}" aria-hidden="true"></i>
                        <span class="sr-only">{{ youtube.title }}</span>
                </a>
                {% endfor %}
            </div>

            <div class="youtube">
                {% for theme in pages["_meta"].meta.theme %}
                    <a href="{{ theme.url }}" title="{{ theme.title }}" role="button">
                        <i class="{{ theme.icon }}" aria-hidden="true"></i>
                        <span class="sr-only">{{ theme.title }}</span>
                </a>
                {% endfor %}
            </div>
            <div class="youtube">
                {% for destroy in pages["_meta"].meta.destroy %}
                    <a href="{{ destroy.url }}" title="{{ theme.destroy }}" role="button">
                        <i class="{{ destroy.icon }}" aria-hidden="true"></i>
                        <span class="sr-only">{{ destroy.title }}</span>
                </a>
                {% endfor %}
            </div>
            <p>
            
                Copyright Â© Nabil Zafari 2020
            <br>naza20@student.bth.se
            </p>
        </div>
    </div>

    <script src="{{ theme_url }}/../shared//js/modernizr-3.3.1-custom.min.js" type="text/javascript"></script>
    <script src="{{ theme_url }}/../shared//js/utils.js" type="text/javascript"></script>
    <script src="{{ theme_url }}/../shared//js/responsive-navbar.js" type="text/javascript"></script>
</body>
</html>
